<h3><%=link_to "Lunchionner", root_path%></h3>

<h1><%=@kitchen.name%></h1>
<% if current_user == @kitchen.user %>
  <p><%= link_to "Edit my kitchen profile", edit_user_kitchen_path(@kitchen.user, @kitchen)%></p>
  <p><%= link_to "Delete my kitchen", user_kitchen_path, method: :delete, data: {confirm: 'Are you sure you want to delete your meal?'}%></p>
  <p><%= link_to "Create a new meal", new_meal_path%></p>
<% end %>

<p>About: <%= @kitchen.description%>
<p>Where: <%= @kitchen.address%>, <%= @kitchen.city%>, <%= @kitchen.state%>, <%= @kitchen.zipcode%></p>


<h2>Lunch for Tomorrow</h2>
<ul>
  <% @kitchen.user.meals.each do |meal| %>
   <li>
    <p><%=meal.name%></p> <%= link_to "Edit my meal", edit_meal_path(meal)%>
    <%= link_to "Delete my meal", meal_path(meal), method: :delete, data: {confirm: 'Are you sure you want to delete your meal?'}%>
    <p>About: <%=meal.description%></p>
    <p>Portion: <%=meal.portion%></p>
    <p>Price: $<%=meal.price%></p>
    <p>Date: <%=meal.created_at%></p>
    <% if current_user %>
      <%= link_to "Order", meal_orders_path(meal), method: :post%>
    <% else %>
      <p>Your need to <%=link_to "log in", user_session_path%> to make an order.</p>
    <% end %>
  </li>
  <% end %>

<!-- reviews -->

  <% if current_user %>
    <%= form_for [@kitchen, @review] do |f| %>
      <% if @review.errors.any?%>
        <%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:
        <ul>
          <% @review.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    <p>
      <%= f.label :your_review %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :rating%><br>
      <%= f.select :rating, 1..5%>
    </p>
    <%= f.submit%>
  <% end %>

<% else %>
  <p>Please Sign in to Leave a Review.</p>
<% end %>




