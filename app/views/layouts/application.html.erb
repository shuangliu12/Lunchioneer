<!DOCTYPE html>
<html>
<head>
  <title>Meet & Lunch</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class = "top-bar" data-topbar class="n">
  <ul class = "title-area">
    <li class = "name">
      <h4>
        <%=link_to "Meet & Lunch", root_path, class: "title" %>
      </h4>
  </li>

  <section class="top-bar-section">
    <ul class = "right" >
      <li class = "divider"><li>
        <li class = "has-dropdown", id="login">
          <% if user_signed_in? %>
          <%= link_to current_user.email, user_path(current_user) %>
          <ul class = "dropdown" >
            <li><%= link_to 'Edit profile', edit_user_registration_path%></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
       </li>
        <% if current_user.kitchen %>
        <li><%= link_to "I am a Chef", user_kitchen_path(current_user, current_user.kitchen) %></li>
            <% end %>
      <% else %>
        <li><%= link_to "Sign up", new_user_registration_path %> </li>
        <li><%= link_to "Login", new_user_session_path %></li>
      <% end %>
    </ul>
  </section>
</nav>


<div class = "container">

 <% if flash.any? %>
  <div class = "alert-box">
    <% flash.keys.each do |type| %>
      <%=flash[type] %>
    <% end %>
  </div>
 <% end %>
</div>

<%= yield %>

</body>
</html>
