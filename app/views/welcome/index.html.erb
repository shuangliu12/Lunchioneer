<div class = "row" >
  <div class = "large-5 large-centered columns">
      <%= form_tag kitchens_path, method: :get do %>
      <div class = "row collapse">
        <div class = "small-10 columns">
          <%= text_field_tag :search, params[:search], placeholder: "enter your city" %>
      </div>
        <div class = "small-2 columns">
          <button class ="tiny button"><%= "search" %></button>
        </div>
    </div>
   <% end %>
  </div>
</div>

<% if current_user %>
  <% if current_user.kitchen %>
    <%= link_to "I am a Chef", user_kitchen_path(current_user, current_user.kitchen) %>
  <% end %>
  <%= link_to "My profile", user_path(current_user) %>
<% end %>

